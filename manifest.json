{
  "manifest_version": 2,
  "homepage_url": "https://example.org/my-addon",
  "name": "Another-Pomodoro",
  "version": "1.0",
  "description": "Un autre pomodoro ...",
  "icons": {
    "48": "icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": {
      "38": "icon.png"
    },
    "default_title": "Start a new pomodoro !"
  },
  "permissions": [
    "notifications",
    "<all_urls>",
    "alarms",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}